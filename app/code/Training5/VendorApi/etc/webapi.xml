<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route url="/V1/vendors" method="GET">
        <service class="Training5\VendorRepository\Api\VendorRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/vendors" method="POST">
        <service class="Training5\VendorRepository\Api\VendorRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/vendors/:id" method="PUT">
        <service class="Training5\VendorRepository\Api\VendorRepositoryInterface" method="save" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/vendors/:id" method="GET">
        <service class="Training5\VendorRepository\Api\VendorRepositoryInterface" method="load"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/vendors/:vendorId/products/" method="GET">
        <service class="Training5\VendorRepository\Api\VendorRepositoryInterface" method="getAssociatedProductIds"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

</routes>